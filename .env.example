# Environment variables for Sales Intelligence Engine

# ----- REQUIRED -----

# Groq AI API Key
GROQ_API_KEY=your_groq_api_key_here

# MongoDB Connection
MONGO_URL=mongodb://localhost:27017

# Zoho Secret (for API authentication)
ZOHO_SECRET=shyam@zoho2005


# ----- OPTIONAL -----

# Application
DEBUG=false
GROQ_MODEL=llama3-70b-8192
MONGO_DB_NAME=sales_intelligence

# Zoho CRM (optional - for lead sync)
# Option 1: OAuth (Recommended - automatic token refresh)
ZOHO_CRM_CLIENT_ID=your_client_id
ZOHO_CRM_CLIENT_SECRET=your_client_secret
ZOHO_CRM_REFRESH_TOKEN=your_refresh_token  # Get from setup_zoho_oauth.py
ZOHO_CRM_API_URL=https://www.zohoapis.com

# Option 2: Manual Access Token (Deprecated - expires every hour)
# ZOHO_CRM_ACCESS_TOKEN=your_access_token

ZOHO_SALESIQ_WIDGET_ID=

# Twilio SMS/OTP (for user authentication)
# Get these from https://www.twilio.com/console
TWILIO_ACCOUNT_SID=your_account_sid
TWILIO_AUTH_TOKEN=your_auth_token
TWILIO_VERIFY_SERVICE_SID=your_verify_service_sid
TWILIO_PHONE_NUMBER=+1234567890

# Set to false when you have real Twilio credentials
USE_MOCK_TWILIO=true

# JWT Configuration
JWT_SECRET_KEY=your_super_secret_jwt_key_change_this_in_production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_DAYS=30
